@model AssignmentTwo.Models.Contact.Contact
@{
    ViewData["Title"] = "Contact Us!";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    @Html.Label("Name")
    <br />
    @Html.TextBoxFor(m => m.Name, new { style = "width:300px" })
    <br />
    <br />
    @Html.Label("Email Address")
    <br />
    @Html.TextBoxFor(m => m.Email, new { style = "width:300px" })
    <br />
    <br />
    @Html.Label("Message")
    <br />
    @Html.TextAreaFor(m => m.Message, new { style = "width:300px; height:125px; max-width:50%; maxlength='200'" })
    <br />
    <input type="submit" value="Submit" />
}

